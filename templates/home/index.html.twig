{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} Accueil{% endblock %}
{% block h1 %}Accueil{% endblock %}

{% block body %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Déconnexion</a>
        </div>
    {% else %}
        <form method="post" action="{{ path('app_login') }}">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <h1 class="h3 mb-3 font-weight-normal">Connexion</h1>

            <div class="form-row">
                <div class="col-5">
                    <input placeholder="Adresse email" type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
                </div>

                <div class="col-5">
                    <input placeholder="Mot de passe" type="password" name="password" id="inputPassword" class="form-control" required>
                </div>

                <div class="col-2 align-bottom">
                    <button class="btn btn-primary" type="submit">Je me connecte</button>
                </div>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
            #}

        </form>
            <a href="{{ path('create_account') }}" class="btn btn-link btn-lg btn-block">Inscription</a>
            <a href="{{ path('password_forgotten') }}" class="btn btn-link btn-lg btn-block">Mot de passe oublié</a>
    {% endif %}
{% endblock %}