{% set cur_path = app.request.get('_route') %}
{% set actif = null %}

{% if cur_path in ['idea_list', 'idea_new', 'idea_update'] %}
    {% if app.request.attributes.get('member_id') %}
        {% set actif = 'other_members' %}
    {% else %}
        {% set actif = 'my_ideas' %}
    {% endif %}
{% elseif cur_path in ['member_list', 'member_show', 'idea_show'] %}
    {% set actif = 'other_members' %}
{% elseif cur_path in ['family_list', 'family_new', 'family_join'] %}
    {% set actif = 'family_list' %}
{% elseif cur_path in ['member_shopping_list'] %}
    {% set actif = 'my_shopping_list' %}
{% endif %}

<header>
    <!-- Fixed navbar -->
    <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
        <div class="container">
            <img id="logo" src="{{ asset('images/logo.png') }}" alt="">
            <a class="navbar-brand innerContainer" href="{{ path('home') }}">Ma lettre au Père Noël</a>
            {% if app.user %}
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
            {% endif %}

            <div class="collapse navbar-collapse" id="navbarCollapse">
                {# Si l'utilisateur est connecté #}
                {% if app.user %}
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item dropdown {% if actif == 'my_ideas' %}active{% endif %}">
                        <a class="nav-link" href="{{ path('idea_list') }}"><i class="fas fa-gift"></i>&nbsp;Mes idées</a>
                    </li>
                    <li class="nav-item dropdown {% if actif == 'other_members' %}active{% endif %}">
                        <a class="nav-link" href="{{ path('member_list') }}"><i class="fas fa-user-friends"></i>&nbsp;Membres</a>
                    </li>
                    <li class="nav-item dropdown {% if actif == 'family_list' %}active{% endif %}">
                        <a class="nav-link" href="{{ path('family_list') }}"><i class="fas fa-home"></i>&nbsp;Mes familles</a>
                    </li>
                    <li class="nav-item dropdown {% if actif == 'my_shopping_list' %}active{% endif %}">
                        <a class="nav-link" href="{{ path('member_shopping_list') }}"><i class="fas fa-shopping-cart"></i>&nbsp;Mes achats</a>
                    </li>
                </ul>

                {% if app.user.families|length > 1 %}
                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarMonCompte" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            {% if app.session.get('family') %}{{ app.session.get('family').name }}{% else %}Familles{% endif %}
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarMonCompte">
                            {% for family in app.user.families %}
                            <a class="dropdown-item" href="{{ path('family_connect', {'id': family.id}) }}"><i class="fas fa-plug"></i>&nbsp;{{ family.name }}</a>
                            {% endfor %}
                        </div>
                    </li>
                </ul>
                {% elseif app.user.families|length == 1 %}
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarMonCompte" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">{{ app.session.get('family').name }}</a>
                    </li>
                </ul>
                {% endif %}

                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarMonCompte" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">{{ app.user.firstname }}</a>
                        <div class="dropdown-menu" aria-labelledby="navbarMonCompte">
                            <a class="dropdown-item" href="{{ path('member_update', {'id': app.user.id}) }}"><i class="fas fa-user"></i>&nbsp;Mon compte</a>
                            <a class="dropdown-item" href="{{ path('idea_archived_list') }}"><i class="fas fa-archive"></i>&nbsp;Idées archivées</a>
                            <a class="dropdown-item" href="{{ path('app_logout') }}"><i class="fas fa-sign-out-alt"></i>&nbsp;Déconnexion</a>
                        </div>
                    </li>
                </ul>

                {% else %}
                <ul class="navbar-nav mr-auto">
                </ul>
                    <form method="post" action="{{ path('app_login') }}" class="form-inline my-2 my-lg-0">
                        <input placeholder="Adresse email" type="email" name="email" class="form-control mr-sm-2" required autofocus>
                        <input placeholder="Mot de passe" type="password" name="password" class="form-control mr-sm-2" required>
                        <button class="btn btn-outline-success my-2 my-sm-0 btn-primary" type="submit">Connexion</button>

                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    </form>
                {% endif %}
            </div>
        </div>
    </nav>
</header>
